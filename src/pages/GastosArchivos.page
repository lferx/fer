<apex:page controller="GastosArchivosController" showHeader="false" >
    <style>
      .actionCol {
            width: 16px;
       }
      .deleteRow {
        background: url(data:image/png;base64,) no-repeat -14px 0%;
        width: 14px;
        height: 14px;
        margin-left:-2px;
        display: inline-block; 
       }
        
        .deleteRow:hover {
                background-position: -42px 0%;
        }
    </style>
    <script>
        function colocaTransparencia(){
            //alert('comienza');
            $("body").css("cursor", "progress");
        }
        
        function retiraTransparencia(){
            //alert('termina');
            $("body").css("cursor", "default");
        }
    </script>
     <apex:form enctype="multipart/form-data">
         <apex:actionStatus id="stCargando" onstart="colocaTransparencia();" onstop="retiraTransparencia();"></apex:actionStatus>
         <apex:actionFunction name="addArchivo" action="{!addArchivo}"/>
         <apex:actionFunction name="delArchivo" action="{!delArchivo}"/>
            <apex:pageMessages />
            <apex:pageBlock title="Adjuntar archivos tipo {!tipo}" id="multipleBloqueUno" rendered="{!permiteAdjuntar}">
                    <apex:repeat value="{!newAttachments}" var="newAtt">
                        <apex:pageBlockSection columns="2">
                           <apex:pageBlockSectionItem >
                                <apex:outputLabel value="Archivo"/>                      
                                <apex:inputFile value="{!newAtt.body}" filename="{!newAtt.name}"/>
                            </apex:pageBlockSectionItem>
                            <apex:pageBlockSectionItem >
                                <apex:outputLabel value="Descripcion"/>                      
                                <apex:inputText value="{!newAtt.Description}"/>
                            </apex:pageBlockSectionItem>
                        </apex:pageBlockSection>
                    </apex:repeat>
                    <div style="text-align:center !important;margin: 10px 0 10px 0;">
                        <button id="" type="button" onclick="addArchivo();this.disabled=true;">Agregar archivos</button>
                    </div>
            </apex:pageBlock>
            <apex:pageBlock title="Archivos adjuntos" id="pbArchivos">
                <apex:variable value="{!0}" var="index"/>
                <apex:pageBlockTable value="{!listaWrapArchivos}" var="item" rendered="{!NOT(ISNULL(listaWrapArchivos))}" id="tablaArchivos">
                     <apex:column rendered="{!permiteAdjuntar}">
                          <apex:facet name="header"> 
                              <button id="" type="button" onclick="delArchivo();this.disabled=true;">Borrar</button>
                          </apex:facet>
                          <apex:inputCheckbox value="{!item.selected}"/>
                          <apex:variable value="{!index+1}" var="index"/>
                    </apex:column> 
                    <apex:column headerValue="Nombre">
                        <apex:outputLink value="../servlet/servlet.FileDownload?file={!item.attachment.Id}" target="_blank">
          						<apex:outputField value="{!item.attachment.Name}"/>
        				</apex:outputLink>
                    </apex:column>
                    <apex:column headerValue="Descripción">
                        <apex:outputField value="{!item.attachment.Description}"></apex:outputField>
                    </apex:column>
                    <!--
                    <apex:column headerValue="Padre">
                        <apex:outputField value="{!item.attachment.ParentId}"></apex:outputField>
                    </apex:column>
					-->
                 </apex:pageBlockTable>
            </apex:pageBlock>
     </apex:form>
</apex:page>