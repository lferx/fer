                    function Plugin($container, options) {
                        
                        this.options = $.extend({}, defaults, options);

                        
                        this._defaults = defaults;

                        
                        this._name = pluginName;

                        var self = this
                        ,   $viewport = $container.find(".viewport:first")
                        ,   $overview = $container.find(".overview:first")
                        ,   $slides = null
